<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.angelo.toupaq_application.Destinos_detalles">
    <ImageView
        android:background="@color/primary_light"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="1.0"
        android:id="@+id/imageView7" />
    <ImageView
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:src="@drawable/icon_destino"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="38dp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="38dp"
        app:layout_constraintVertical_bias="0.0"
        android:id="@+id/imageView6" />
    <TextView
        android:text="Destinos"
        android:gravity="fill_horizontal"
        android:textSize="50dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="9dp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        android:layout_marginEnd="27dp"
        app:layout_constraintRight_toRightOf="@+id/imageView7"
        android:layout_marginTop="10dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="11dp"
        app:layout_constraintTop_toTopOf="@+id/imageView7"
        app:layout_constraintLeft_toRightOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.916"
        app:layout_constraintVertical_bias="1.0" />
    <View
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="@color/divider"
        android:id="@+id/view2"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/imageView5"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="488dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="75dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:id="@+id/imageView5" />
    <TextView
        android:layout_width="220dp"
        android:layout_height="47dp"
        android:text="Destino"
        android:textSize="40dp"
        android:gravity="center"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/textView4" />
    <ImageView

        android:layout_width="46dp"
        android:layout_height="41dp"
        android:src="@drawable/icon_casa"
        android:id="@+id/imageView8"
        app:layout_constraintRight_toLeftOf="@+id/textView4"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"

        android:layout_marginEnd="20dp"
        android:layout_marginTop="166dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.444" />
    <TextView
        android:text="Hoteles"
        android:gravity="center_vertical"
        android:textSize="30dp"
        android:layout_width="144dp"
        android:layout_height="0dp"
        android:layout_marginLeft="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"

        android:layout_marginStart="70dp"
        app:layout_constraintTop_toTopOf="@+id/imageView8"
        android:layout_marginTop="5dp" />

    <android.support.v7.widget.RecyclerView

        android:layout_width="378dp"
        android:layout_height="113dp"
        android:layout_marginStart="20dp"
        android:id="@+id/recyclerView"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintVertical_bias="0.473"/>


</android.support.constraint.ConstraintLayout>
